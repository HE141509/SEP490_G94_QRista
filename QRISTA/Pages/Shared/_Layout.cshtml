@{
    var isIndexOrMenu = string.Equals(System.IO.Path.GetFileNameWithoutExtension(ViewContext.View.Path), "Index", StringComparison.OrdinalIgnoreCase) ||
                       string.Equals(System.IO.Path.GetFileNameWithoutExtension(ViewContext.View.Path), "Menu", StringComparison.OrdinalIgnoreCase);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QRB</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QRB.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    @* Đã loại bỏ header Bootstrap cũ để tránh lặp header trên các trang nghiệp vụ *@
    <div class="@((isIndexOrMenu ? "p-0 m-0 w-100 h-100" : "w-100 p-0 m-0"))" style="min-height:100vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (!isIndexOrMenu)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - QRB - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
