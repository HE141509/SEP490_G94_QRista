@page
@model QRB.Pages.ReturnUrlModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kết quả thanh toán VNPAY</title>
    <link rel="stylesheet" href="/css/payment.css" />
    <style>
        .result-container {
            max-width: 400px;
            margin: 80px auto;
            background: rgba(255,255,255,0.95);
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.13);
            padding: 32px 28px 24px 28px;
            text-align: center;
        }
        .result-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 18px;
        }
        .result-success { color: #1abc9c; }
        .result-fail { color: #e74c3c; }
        .result-detail {
            margin-top: 18px;
            font-size: 1.1rem;
            color: #555;
        }
        .btn-back {
            margin-top: 28px;
            padding: 10px 28px;
            border: none;
            border-radius: 8px;
            background: #1abc9c;
            color: #fff;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }
        .btn-back:hover { background: #16a085; }
    </style>
</head>
<body style="background: url('/img/background.jpg') center/cover no-repeat; min-height: 100vh;">
    <div class="result-container">
        <div class="result-title @(Model.IsSuccess ? "result-success" : "result-fail")">
            @(Model.IsSuccess ? "Thanh toán thành công!" : "Thanh toán thất bại!")
        </div>
        <div class="result-detail">
            @Model.Message
        </div>
        <form method="get" action="/Menu">
            <button class="btn-back" type="submit">Quay về Menu</button>
        </form>
    </div>
</body>
</html>
